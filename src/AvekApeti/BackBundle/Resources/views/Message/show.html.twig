{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Affichage de #{{ entity.id }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <p><span class="gras">Id :</span> {{ entity.id }}</p>
            <p><span class="gras">Objet :</span> {{ entity.item }}</p>
            <p><span class="gras">Contenu :</span> {{ entity.content }}</p>
            <p><span class="gras">Date de création :</span> {{ entity.dateCreated|date('Y-m-d H:i:s') }}</p>
            <p><span class="gras">Accusé de lecture :</span> {{ entity.accLecture }}</p>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <a class="btn btn-info" href="{{ path('message') }}">Retour à la liste</a>
    <a class="btn btn-primary" href="{{ path('message_edit', { 'id': entity.id }) }}">Modifier</a>
    <hr>
    {{ form(delete_form) }}

{% endblock %}

