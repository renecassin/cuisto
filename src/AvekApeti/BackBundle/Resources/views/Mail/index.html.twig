{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Mail list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Mail</th>
                <th>Datecreated</th>
                <th>Phone</th>
                <th>Item</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mail_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.mail }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.item }}</td>
                <td>{{ entity.content }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mail_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('mail_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mail_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
