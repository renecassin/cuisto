{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edition de #{{ entity.id }}</h1>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(edit_form) }}
                                <div class="form-group">
                                    {{ form_label(edit_form.name, 'Nom') }}
                                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'placeholder':"Nom"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.name) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.role, 'Role') }}
                                    {{ form_widget(edit_form.role, {'attr': {'class': 'form-control', 'placeholder':"Role"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.role) }}</p>
                                </div>
                                <div class="col-md-12">
                                    <div id="success"></div>
                                    <a href="{{ path('groupe') }}" class="btn btn-info">Retour Ã  la liste</a>
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    <hr>
                                </div>

                            {{ form_end(edit_form) }}

                            {{ form(delete_form) }}
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock content %}
