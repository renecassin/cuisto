{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edition de #{{ entity.id }}</h1>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(edit_form) }}
                                <div class="form-group">
                                    {{ form_label(edit_form.name, 'Nom') }}
                                    {{ form_widget(edit_form.name, {'attr': {'class': 'form-control', 'placeholder':"Nom"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.name) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.image, 'Photo') }}
                                    {{ form_widget(edit_form.image, {'attr': {'type': 'form-file'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.image) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.content, 'Description') }}
                                    {{ form_widget(edit_form.content, {'attr': {'class': 'form-control', 'placeholder':"Description"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.content) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.price, 'Prix') }}
                                    {{ form_widget(edit_form.price, {'attr': {'class': 'form-control', 'placeholder':"Prix"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.price) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.quantity, 'Quantité') }}
                                    {{ form_widget(edit_form.quantity, {'attr': {'class': 'form-control', 'placeholder':"Quantité"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.quantity) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.active, 'Active') }}
                                    {{ form_widget(edit_form.active, {'attr': {'type': 'checkbox'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.active) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.unableWhile, 'Fermeture des commandes') }}
                                    {{ form_widget(edit_form.unableWhile)}}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.unableWhile) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.dateStart, 'Heure de début') }}
                                    {{ form_widget(edit_form.dateStart)}}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.dateStart) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.dateEnd, 'Heure de fin') }}
                                    {{ form_widget(edit_form.dateEnd) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.dateEnd) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.Utilisateur, 'Chef') }}
                                    {{ form_widget(edit_form.Utilisateur, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.Utilisateur) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.specialite, 'Spécialité') }}
                                    {{ form_widget(edit_form.specialite, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.specialite) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.categorie, 'Catégorie') }}
                                    {{ form_widget(edit_form.categorie, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.categorie) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.tcoms, 'Type de repas') }}
                                    {{ form_widget(edit_form.tcoms, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.tcoms) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.tliv, 'Mode de remise') }}
                                    {{ form_widget(edit_form.tliv, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.tliv) }}</p>
                                </div>
                                <div class="col-md-12">
                                    <div id="success"></div>
                                    <a href="{{ path('plat') }}" class="btn btn-info">Retour à la liste</a>
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    <hr>
                                </div>

                            {{ form_end(edit_form) }}

                            {{ form(delete_form) }}

                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock content %}
