{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edition de #{{ entity.id }}</h1>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(edit_form) }}
                                <div class="form-group">
                                    {{ form_label(edit_form.firstname, 'Prénom') }}
                                    {{ form_widget(edit_form.firstname, {'attr': {'class': 'form-control', 'placeholder':"Prénom"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.firstname) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.lastname, 'Nom') }}
                                    {{ form_widget(edit_form.lastname, {'attr': {'class': 'form-control', 'placeholder':"Nom"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.lastname) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.email, 'E-mail') }}
                                    {{ form_widget(edit_form.email, {'attr': {'class': 'form-control', 'placeholder':"Nom"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.email) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.login, 'Pseudo') }}
                                    {{ form_widget(edit_form.login, {'attr': {'class': 'form-control', 'placeholder':"Pseudo"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.login) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.password, 'Mot de passe') }}
                                    {{ form_widget(edit_form.password, {'attr': {'class': 'form-control', 'placeholder':"Mot de passe"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.password) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.adress, 'Adresse') }}
                                    {{ form_widget(edit_form.adress, {'attr': {'class': 'form-control', 'placeholder':"Adresse"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.adress) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.city, 'Ville') }}
                                    {{ form_widget(edit_form.city, {'attr': {'class': 'form-control', 'placeholder':"Ville"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.city) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.cp, 'Code postal') }}
                                    {{ form_widget(edit_form.cp, {'attr': {'class': 'form-control', 'placeholder':"Code postal"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.cp) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.phone, 'Téléphone') }}
                                    {{ form_widget(edit_form.phone, {'attr': {'class': 'form-control', 'placeholder':"Téléphone"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.phone) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.salt, 'Clé de salage') }}
                                    {{ form_widget(edit_form.salt, {'attr': {'class': 'form-control', 'placeholder':"Clé de salage"}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.salt) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.newsletter, 'Newsletter') }}
                                    {{ form_widget(edit_form.newsletter, {'attr': {'type': 'checkbox'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.newsletter) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.image, 'Image') }}
                                    {{ form_widget(edit_form.image, {'attr': {'type': 'file'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.image) }}</p>
                                </div>
                                <div class="form-group">
                                    {{ form_label(edit_form.groupe, 'Groupe') }}
                                    {{ form_widget(edit_form.groupe, {'attr': {'class': 'form-control'}}) }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.groupe) }}</p>
                                </div>
                                <div class="col-md-12">
                                    <div id="success"></div>
                                    <a href="{{ path('utilisateur') }}" class="btn btn-info">Retour à la liste</a>
                                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                                    <hr>
                                    {{ form(delete_form) }}
                                </div>

                            {{ form_end(edit_form) }}
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock content %}

