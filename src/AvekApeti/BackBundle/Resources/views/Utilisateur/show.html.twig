{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Affichage de #{{ entity.id }}</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-12">
            <p><span class="gras">Id :</span> {{ entity.id }}</p>
            <p><span class="gras">Prénom :</span> {{ entity.firstname }}</p>
            <p><span class="gras">Nom :</span> {{ entity.lastname }}</p>
            <p><span class="gras">Adresse e-mail :</span> {{ entity.email }}</p>
            <p><span class="gras">Pseudo :</span> {{ entity.login }}</p>
            <p><span class="gras">Adresse :</span> {{ entity.adress }}</p>
            <p><span class="gras">Ville :</span> {{ entity.city }}</p>
            <p><span class="gras">Code postal :</span> {{ entity.cp }}</p>
            <p><span class="gras">Téléphone :</span> {{ entity.phone }}</p>
            <p><span class="gras">Mot de passe :</span> {{ entity.password }}</p>
            <p><span class="gras">Clé de salage :</span> {{ entity.salt }}</p>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <a class="btn btn-info" href="{{ path('utilisateur') }}">Retour à la liste</a>
    <a class="btn btn-primary" href="{{ path('utilisateur_edit', { 'id': entity.id }) }}">Modifier</a>
    <hr>
    {{ form(delete_form) }}


{% endblock %}
