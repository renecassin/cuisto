{% extends "AvekApetiBackBundle:Main:index.html.twig" %}

{% block titre %} {{ parent() }}{% endblock %}

{% block content -%}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Nouveau Chef</h1>
        </div>

        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.utilisateur, 'Gourmet') }}
                                {{ form_widget(form.utilisateur, {'attr': {'class': 'form-control', 'placeholder':"Gourmet"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.utilisateur) }}</p>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.adress, 'Adresse') }}
                                {{ form_widget(form.adress, {'attr': {'class': 'form-control', 'placeholder':"Adresse"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.adress) }}</p>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.city, 'Ville') }}
                                {{ form_widget(form.city, {'attr': {'class': 'form-control', 'placeholder':"Ville"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.city) }}</p>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.cp, 'Code postal') }}
                                {{ form_widget(form.cp, {'attr': {'class': 'form-control', 'placeholder':"Code postal"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.cp) }}</p>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.zoneKm, 'Zone en (km)') }}
                                {{ form_widget(form.zoneKm, {'attr': {'class': 'form-control', 'placeholder':"Zone (en km)"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.zoneKm) }}</p>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.siret, 'Siret') }}
                                {{ form_widget(form.siret, {'attr': {'class': 'form-control', 'placeholder':"SIret"}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.siret) }}</p>
                            </div>

                            <div class="form-group">
                                {{ form_label(form.professionnel, 'Professionnel') }}
                                {{ form_widget(form.professionnel, {'attr': {'type': 'checkbox'}}) }}
                                <p class="help-block text-danger">{{ form_errors(form.professionnel) }}</p>
                            </div>
                            <div class="col-md-12">
                                <div id="success"></div>
                                <a href="{{ path('utilisateur') }}" class="btn btn-info">Retour Ã  la liste</a>
                                <button type="submit" class="btn btn-primary">Enregistrer</button>
                                <hr>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock content %}

