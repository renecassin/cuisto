{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Avis list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Note</th>
                <th>Datecreated</th>
                <th>Comment</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('avis_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.note }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.active }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('avis_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('avis_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('avis_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
