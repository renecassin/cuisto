{%  extends 'GourmetBundle::layout.html.twig' %}

{% block foot_scripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <script type="text/javascript">
            $('#myStateButton').on('click', function () {
            var btn = $(this)
            btn.button('complete')
            setTimeout(function () {
                btn.button('reset')
            }, 2000)
        })
    </script>
{%  endblock foot_scripts %}

