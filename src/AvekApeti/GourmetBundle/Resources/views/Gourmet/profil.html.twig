{%  extends 'GourmetBundle::layout.html.twig' %}

{% block titre %}Mon compte{{ parent() }}{% endblock %}

{% block content %}
    <header class="header-inscription" id="header-mon-compte">
        <div class="header-content header-content-transform">
                <div class="header-content-inner">
                    <h1 class="h1-page">Mon compte</h1>
                    <h2 class="adresse-selection">{{ app.user.username }}</h2>
                </div>
        </div>
    </header>

    <section id="page-mon-compte">
        <div class="container">

            <div class="col-sm-12 text-center photo-mon-compte ">
                {% if entity.image %}
                    <img src="{{ entity.image.webPath|imagine_filter('profil_picture') }}" alt="" class="img-circle">
                {% else %}
                    <img src={{ asset('bundles/gourmet/img/defaut/defaut-icon.png') }} alt="" class="img-circle">
                {% endif %}
            </div>

            <div class="row">
                {{ form_start(edit_form, {attr:{class: "form-horizontal"}} ) }}
                    <div class="col-md-6">
                        <div class="row">

                        <div class="col-lg-12 text-center titre-compte">
                            <h3 class="section-heading">Qui et où êtes-vous ?</h3>
                            <hr class="primary">
                            <p>Vos coordonnées sont privées. Seuls les chefs qui ont accepté votre commande voient votre adresse exacte.</p>
                        </div>
                        </div>

                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.firstname, 'Prénom', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.firstname,
                                {
                                    attr:{class: "form-control",placeholder: "Prénom",id: "prenom",required: 'data-validation-required-message= "Veuillez entrer votre prénom."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.firstname) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.lastname, 'Nom', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.lastname,
                                {
                                    attr:{class: "form-control",placeholder: "Nom",id: "nom",required: 'data-validation-required-message= "Veuillez entrer votre nom."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.lastname) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.login, 'Pseudo', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.login,
                                {
                                    attr:{class: "form-control",placeholder: "Pseudo",id: "login",required: 'data-validation-required-message= "Veuillez entrer votre pseudo."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.login) }}</p>
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.email, 'Adresse e-mail', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                    {{ form_widget(edit_form.email,
                                    {
                                        attr:{class: "form-control",placeholder: "Adresse e-mail : nom@exemple.com",id: "email",required: 'data-validation-required-message= "Veuillez entrer votre email."'}
                                    })
                                    }}
                                    <p class="help-block text-danger">{{ form_errors(edit_form.email) }}</p>
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.password, 'Mot de passe', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.password,
                                {
                                    attr:{class: "form-control",placeholder: "Mot de passe",id: "password",required: 'data-validation-required-message= "Veuillez entrer votre mot de passe."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.password) }}</p>
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.phone, 'Téléphone', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.phone,
                                {
                                    attr:{class: "form-control",placeholder: "Téléphone",id: "telephone",required: 'data-validation-required-message= "Veuillez entrer votre numéro de téléphone."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.phone) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.adress, 'Adresse', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.adress,
                                {
                                    attr:{class: "form-control",placeholder: "Adresse",id: "adresse",required: 'data-validation-required-message= "Veuillez entrer votre adresse."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.adress) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.city, 'Ville', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.city,
                                {
                                    attr:{class: "form-control",placeholder: "Ville",id: "ville",required: 'data-validation-required-message= "Veuillez entrer votre ville."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.city) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.cp, 'Code postal', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.cp,
                                {
                                    attr:{class: "form-control",placeholder: "Code Postal",id: "code-postal",required: 'data-validation-required-message= "Veuillez entrer votre code postal."'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.cp) }}</p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <div class="col-sm-offset-3 col-md-8">
                                {#
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="remember-me" checked>J’accepte de recevoir les menus du jour disponibles dans mon quartier
                                    </label>
                                </div>
                                #}
                                <div class="checkbox">
                                    <label>
                                        {{ form_widget(edit_form.newsletter,
                                        {
                                            attr:{type:"checkbox",id: "newsletter"}
                                        })
                                        }}J’accepte de recevoir les menus du jour disponibles dans mon quartier
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                    </div>

                    <div class="col-md-6">
                        <div class="col-lg-12 text-center titre-compte">
                            <h3 class="section-heading">Nous somme curieux ...</h3>
                            <hr class="primary">
                            <p>Etes-vous un fin gourmet ? Donner envie aux chefs de cuisiner pour vous.</p>
                        </div>
                        <div class="form-group has-feedback">
                            {{ form_label(edit_form.image, 'Photo de profil', {'label_attr': {'class': 'col-md-3 control-label'}}) }}
                            <div class="col-md-8">
                                {{ form_widget(edit_form.image,
                                {
                                    attr:{id: "photo-gourmet",required: 'data-validation-required-message= "Veuillez sélectionner votre photo de profil"'}
                                })
                                }}
                                <p class="help-block text-danger">{{ form_errors(edit_form.image) }}</p>
                            </div>
                            <div class="col-md-8 col-md-offset-3">

                                {% if entity.image %}
                                    <img src="{{ entity.image.webPath|imagine_filter('profil_picture') }}" alt="">
                                {% else %}
                                    <img src={{ asset('bundles/gourmet/img/defaut/defaut-icon.png') }} alt="">
                                {% endif %}
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <label for="connu" class="col-md-3 control-label" id="comment">Comment avez-vous connu Avekapeti ?</label>
                            <div class="col-md-8">
                                <select class="form-control" id="connu">
                                    <option>Par un membre de notre équipe</option>
                                    <option>Flyer</option>
                                    <option>Moteur de recherche (ex: Google, Bing)</option>
                                    <option>Réseaux sociaux</option>
                                </select>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <label for="couverts" class="col-md-3 control-label" id="disposez">Disposez-vous de couverts ?</label>
                            <div class="col-md-8">
                                <select class="form-control" id="couverts">
                                    <option>Oui</option>
                                    <option>Non</option>
                                </select>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="form-group has-feedback">
                            <label for="description" class="col-md-3 control-label">Votre description</label>
                            <div class="col-md-8">
                                <textarea class="form-control" placeholder="Ecrivez un petit message sympa aux chefs pour leur donner davantage envie de cuisiner pour vous ..." id="description"  data-validation-required-message="Veuillez entrer votre description."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>


                    </div>
                    <div class="col-md-12 text-center">
                        <div id="success"></div>
                        <button type="submit" class="btn btn-default btn-xl">Enregistrer</button>
                    </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </section>



{% endblock content %}
