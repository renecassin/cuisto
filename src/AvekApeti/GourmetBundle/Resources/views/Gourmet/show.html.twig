{%  extends 'GourmetBundle::layout.html.twig' %}

{% block titre %}{{ entity.status }} {{ parent() }}{% endblock %}

{% block content %}
<header class="header-inscription" id="header-voir-commande">
    <div class="header-content header-content-transform">
        <div class="header-content-inner">
            <h1 class="h1-page">Ma commande</h1>
            <h2 class="adresse-selection">Chef {{ app.user.username }}</h2>
        </div>
    </div>
</header>

<section id="page-voir-commande">
    <div class="container">

        <div class="col-sm-12 text-center photo-mon-compte ">
            {% if entityUser.image %}
                <img src="{{ asset(entityUser.image.webPath('thumb-small')) }}" alt="" class="img-circle">
            {% else %}
                <img src={{ asset('bundles/gourmet/img/defaut/defaut-icon.png') }} alt="" class="img-circle">
            {% endif %}
        </div>

        <div class="col-md-8 col-md-offset-2">
            <div class="row ligne-titre-commande">
                <div class="col-xs-8">
                    <h2>{{ entity.status }}</h2>
                </div>
                <div class="col-xs-4 text-right">
                    <h2>{{ entity.total }} â‚¬</h2>
                </div>
            </div>
            <div class="row ligne-voir-msg">
                <div class="col-xs-8 col-sm-3">
                    <h4>
                        <a href="{{ path('gourmet_commande_details', { 'id': entity.id }) }}">
                            {% if (is_granted('ROLE_CHEF')) and entity.utilisateur %}
                                <h3>Chef {{ entity.utilisateur.login }}</h3>
                            {% endif %}
                            {% if (is_granted('ROLE_GOURMET')) and entity.chef %}
                                <h3>{{ entity.chef.login }}</h3>
                            {% endif %}
                        </a>
                    </h4>
                </div>
                <div class="col-xs-4 col-sm-2">
                    <a href="{{ path('gourmet_commande_details', { 'id': entity.id }) }}">
                        {% if (is_granted('ROLE_GOURMET')) and entity.utilisateur %}
                            <img src="{{ asset(entity.utilisateur.image.webPath('thumb-small')) }}" alt=""  class="img-voir-msg">
                        {% endif %}
                        {% if (is_granted('ROLE_CHEF')) and entity.chef %}
                            <img src="{{ asset(entity.chef.image.webPath('thumb-small')) }}" alt=""  class="img-voir-msg">
                        {% endif %}
                    </a>
                </div>

                <div class="col-xs-12 col-sm-7 text-right">
                    <h4>le {{ entity.dateCreated|date('d/m/Y') }}</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <ul>
                        <li>Type de livraison : {% if entity.livraison %}{{ entity.livraison.name}}{% endif %}</li>
                        <li>Type de commande : {% if entity.typecommande %}{{ entity.typecommande.name}}{% endif %}</li>
                        <li>Description : {{ entity.content|nl2br  }}</li>
                        <li>Validation : {{ entity.contentvalidation}}</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-12 text-center">
            <div id="success"></div>
            <a href="{{ path('gourmet_commande') }}" class="btn btn-default btn-filtre"><i class="fa fa-1x fa-undo"></i>Retour</a>
        </div>

    </div>
</section>
{% endblock content %}
