{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commande list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datecreated</th>
                <th>Total</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('gourmet_commande_details', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.id }}</a></td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.total }}</td>
                <td>{{ entity.status }}</td>
                <td>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
