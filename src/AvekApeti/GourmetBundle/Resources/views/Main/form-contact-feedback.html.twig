
<form name="sentMessage" id="contactForm" novalidate>
    <div class="row margin-haut">
        <div class="col-md-6">
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Nom" id="nom" required data-validation-required-message="Veuillez entrer votre nom.">
                <span class="glyphicon glyphicon-user form-control-feedback glyphicon-perso"></span>
                <p class="help-block text-danger"></p>
            </div>
            <div class="form-group has-feedback">
                <input type="text" class="form-control" placeholder="Prénom" id="prenom" required data-validation-required-message="Veuillez entrer votre prénom.">
                <span class="glyphicon glyphicon-user form-control-feedback glyphicon-perso"></span>
                <p class="help-block text-danger"></p>
            </div>
            <div class="form-group has-feedback">
                <input type="tel" class="form-control" placeholder="Téléphone" id="telephone" required data-validation-required-message="Veuillez entrer votre numéro de téléphone.">
                <span class="glyphicon glyphicon-earphone form-control-feedback glyphicon-perso"></span>
                <p class="help-block text-danger"></p>
            </div>
            <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Adresse e-mail : nom@exemple.com" id="email" required data-validation-required-message="Veuillez entrer votre email.">
                <span class="glyphicon glyphicon-envelope form-control-feedback glyphicon-perso"></span>
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group has-feedback">
                <textarea class="form-control" placeholder="Message" id="message" required data-validation-required-message="Veuillez entrer votre message.."></textarea>
                <p class="help-block text-danger"></p>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="col-md-12 text-center">
        <div id="success"></div>
        <button type="submit" class="btn btn-default btn-xl">Envoyer</button>
    </div>
</form>


