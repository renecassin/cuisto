{%  extends  "@GourmetBundle/Resources/views/layout.html.twig" %}

{% block titre %}Connexion{{ parent() }}{% endblock %}

{% block content %}

    <header class="header-inscription" id="connexion">
        <div class="header-content header-content-transform ">
                <div class="col-md-4 col-md-offset-4" >
                    <div class="row">
                        <div class="bloc-titre-inscription">
                            <h1 class="h1-page">Connexion</h1>
                        </div>
                        <div class="login-panel panel panel-default panel-perso">
                            <div class="panel-body">
                                <form role="form" action="{{ path('login_check') }}" method="post">
                                    {#
                                    <div class=" panel-heading-perso ">
                                        <a href="#" class="btn btn-primary btn-xl btn-facebook-inscription"><i class="fa fa-2x fa-facebook logo-facebook"></i>
                                            Connexion avec Facebook</a>
                                    </div>
                                    <p class="ou">ou</p>
                                    <hr class="margin-hr">
                                    #}
                                    <fieldset>
                                        <div class="form-group has-feedback">
                                            <input type="email" class="form-control form-control-perso" placeholder="Adresse e-mail : nom@exemple.com" id="username" name="_username" required data-validation-required-message="Veuillez entrer votre e-mail." value="{{ last_username }}">
                                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group has-feedback">
                                            <input type="password" class="form-control form-control-perso" placeholder="Mot de passe" id="password" name="_password" required data-validation-required-message="Veuillez entrer votre numéro de téléphone.">
                                            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                                            <p class="help-block text-danger">
                                            {% if error %}
                                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                            {% endif %}
                                            </p>
                                        </div>
                                        <div class="checkbox remember">
                                            <label>
                                                <input class="form_control" name="_remember_me"  type="checkbox" value="Remember Me">Garder ma session active
                                            </label>
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        <button type="submit" class="btn btn-primary btn-xl btn-valider-inscription" >Connexion</button>
                                        <div class="form-group">
                                            <p class="acceptation"><a href="#">Mot de passe oublié ?</a></p>
                                        </div>
                                        <hr>
                                        <p class="acceptation">Vous n'avez pas encore de compte ? <a href="{{ path('gourmet_gourmet_inscription_page') }}">Inscription</a></p>
                                        <p class="acceptation">Vous souhaitez devenir Chef ? <a href="{{ path('gourmet_chef_inscription_page') }}">Inscription Chef</a></p>
                                    </fieldset>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </header>
{% endblock content %}

{% block footer %}
{% endblock footer %}